{
  "name": "api",
  "version": "0.1.0",

  "imports": {
    "@shared/": "../../packages/shared/"
  },

  "tasks": {
    "dev": "deno run --watch --allow-net --allow-env src/main.ts",
    "start": "deno run --allow-net --allow-env src/main.ts",
    "check": "deno check src/main.ts",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "test": "deno test"
  },

  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },

  "fmt": {
    "lineWidth": 100,
    "semiColons": true,
    "singleQuote": true
  }
}
